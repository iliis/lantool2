<br><br>

<% matrix = @poll.strongest_path %>
<table class="prefordering_matrix">
	<thead>
		<tr>
		<th></th>
		<% @poll.options.each do |optA| %>
			<th><%= optA.text %></th>
		<% end %>
		</tr>
	</thead>
	<tbody>
		<% @poll.options.each do |optB| %>
			<tr>
				<th><%= optB.text %></th>
				<% @poll.options.each do |optA| %>
					<% if optA == optB %>
						<td>-</td>
					<% else %>
						<td><%= matrix[[optA, optB]] %></td>
					<% end %>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>


