<h1>All Users</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Nick</th>
			<% if admin? %><th>Email</th><% end %>
			<th>IP</th>
			<th>Host</th>
			<th>Ports</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |u| %>
			<tr>
				<td><%= link_to u.name, u %></td>
				<td><%= u.nick %></td>
				<% if admin? %><td><%= u.email %></td><% end %>
				<td><%= u.current_ip %></td>
				<td><%= u.current_hostname %></td>
				<td><%= u.current_ports %></td>
			</tr>
		<% end %>
	</tbody>
</table>
