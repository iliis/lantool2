  <%= label_tag :subject, "Subject:" %>
  <%= text_field_tag(:subject, @subject) %>

  <hr class="field_seperator">

  Hallo $name<br>
  <%= text_area_tag(:message, @message) %>

  <hr class="field_seperator">

  <%= check_box_tag(:exclude_registered, "true") %>
