<% content_for :site_title do %>LAN Mailingliste: import data<% end %>
<% content_for :page_title do %>Mailingliste: Import<% end %>
<% content_for :page_subtitle do %>
  <%= link_to "manage", :controller => 'mailinglist', :action => 'manage' %>
<% end %>

<%= form_tag do %>
	<%= label_tag(:divider, "Separator:") %>
	<%= text_field_tag(:divider, @separator) %>
	
	<hr class="field_seperator" />
	
	<%= label_tag(:data, "Data (one entry per line):<br>Name, EMail') %>
	<%= text_area_tag(:data, @data) %>
	
	<hr class="field_seperator" />
	
	<%= submit_tag("import") %>
<% end %>
